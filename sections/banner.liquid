<!-- filepath: sections/banner.liquid -->
{% schema %}
{
  "name": "Banner",
  "settings": [
    {
        "type": "text",
        "id": "company_name",
        "label": "Top Bar Company Name",
        "default": "TISSO VISON"
      },
      {
        "type": "text",
        "id": "top_bar_announcement",
        "label": "Top Bar Announcement",
        "default": "Find the ideal gift for your loved ones"
      },
      {
        "type": "text",
        "id": "top_bar_button_text",
        "label": "Top Bar Button Text",
        "default": "CHOOSE GIFT"
      },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "banner_subheading",
      "label": "Banner Subheading",
      "default": "Your Banner Subheading"
    },
    {
      "type": "url",
      "id": "banner_button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
        "type": "text",
        "id": "bottom_banner_text",
        "label": "Bottom Banner Text",
        "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
      }
  ]
}
{% endschema %}

<div class="banner">
<div class="top-bar">
   <div class="top-bar-company-name">{{ section.settings.company_name }}</div>
   <div class="top-bar-announcement"> {{ section.settings.top_bar_announcement }}</div>
    <a href="{{ section.settings.banner_button_link }}" class="top-bar-button">{{ section.settings.top_bar_button_text }}</a>
</div>

<img id="frame2-img" src="{{ 'Frame2.svg' | asset_url }}" alt="Banner Image"  width="600" height="400">
  <div class="banner-container">
    <div class="banner-content">
        <h1>{{ section.settings.banner_heading }}</h1>
        <p>{{ section.settings.banner_subheading }}</p>
        <a href="{{ section.settings.banner_button_link }}" class="banner-button">{{ section.settings.banner_button_text }}</a>
    </div>
    <img id="frame1-img" src="{{ 'Frame1.png' | asset_url }}" alt="Banner Image" width="600" height="400">
   </div>
   <div class="banner-bottom-bar">
    <div class="banner-bottom-announcement">{{ section.settings.bottom_banner_text }}</div>
   </div>
</div>

<style>
  .banner-bottom-bar,
  .top-bar {
    background: #F5F5F5;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;

    }
    .top-bar .top-bar-company-name {
        color: black;
        font-weight: 600;
    }

    .banner-bottom-announcement,
    .top-bar-announcement {
        color: black;
        font-style: normal;
        font-size: 11.6667px;
        line-height: 36px;
        /* identical to box height, or 84% */
        display: flex;
        align-items: center;
        text-align: center;
    }

    .top-bar-button {
        background: #FFF544;
        border-radius: 4px;
        font-family: 'Jost';
        font-style: normal;
        font-weight: 400;
        line-height: 55px;
        /* identical to box height, or 128% */
        display: flex;
        align-items: center;
        text-align: center;
        text-transform: uppercase;      
        text-decoration: none;
        padding: 0rem 1rem;
        color: #000000;
    }
  .banner {
    position: relative;
    text-align: center;
    color: white;
  }
  #frame2-img {
    width: 100%;
    height: auto;
  }
  .banner-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .banner-content p {
    color: black;
    text-align: left;
  }
  .banner-button {
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;position: relative;
  }
  .top-bar-button::after,
  .banner-button::after {
    content: 'â†’';
    margin-left: 10px;
    font-size: 16px;
  }
  .banner-button:hover {
    background-color: #333;
  }
  .banner-container {
    display: flex;
    justify-content: space-between;
    padding-left: 5rem;
  }
  #frame1-img {
    width: 60%
  }
</style>