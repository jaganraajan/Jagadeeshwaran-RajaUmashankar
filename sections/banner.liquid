</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
      var moreOptions = document.querySelector('.more-options');
      var topBarExtra = document.querySelector('.top-bar-extra');
  
      if (moreOptions) {
        moreOptions.addEventListener('click', function() {
          topBarExtra.classList.toggle('show');
        });
      }
    });
  </script>