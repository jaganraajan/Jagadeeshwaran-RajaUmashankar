<!-- filepath: sections/banner.liquid -->
{% schema %}
{
  "name": "Banner",
  "settings": [
    {
        "type": "text",
        "id": "company_name",
        "label": "Top Bar Company Name",
        "default": "TISSO VISON"
      },
      {
        "type": "text",
        "id": "top_bar_announcement",
        "label": "Top Bar Announcement",
        "default": "Find the ideal gift for your loved ones"
      },
      {
        "type": "text",
        "id": "top_bar_button_text",
        "label": "Top Bar Button Text",
        "default": "CHOOSE GIFT"
      },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "banner_subheading",
      "label": "Banner Subheading",
      "default": "Your Banner Subheading"
    },
    {
      "type": "url",
      "id": "banner_button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
        "type": "text",
        "id": "bottom_banner_text",
        "label": "Bottom Banner Text",
        "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
      }
  ]
}
{% endschema %}

  <div class="top-bar-mobile">
    <span class="more-options">&#9776;</span>
    <span class="top-bar-company-name">{{ section.settings.company_name }}</span>
  </div>
  <div class="top-bar-extra">
        <span class="top-bar-announcement">{{ section.settings.top_bar_announcement }}</span>
        <a href="#product-grid-section" class="top-bar-button">{{ section.settings.top_bar_button_text }}</a>
    </div>
  <div class="top-bar">
      <div class="top-bar-company-name">{{ section.settings.company_name }}</div>
      <div class="top-bar-announcement"> {{ section.settings.top_bar_announcement }}</div>
      <a href="#product-grid-section" class="top-bar-button">{{ section.settings.top_bar_button_text }}</a>
  </div>

<div class="banner">
<img id="frame2-img" src="{{ 'Frame2.svg' | asset_url }}" alt="Banner Image"  width="600" height="400">
  <div class="banner-container">
    <div class="banner-content">
        <h1>{{ section.settings.banner_heading }}</h1>
        <p>{{ section.settings.banner_subheading }}</p>
        <a href="{{ section.settings.banner_button_link }}" class="banner-button">{{ section.settings.banner_button_text }}</a>
    </div>
    <img id="frame1-img" src="{{ 'Frame1.png' | asset_url }}" alt="Banner Image" width="600" height="400">
   </div>
   <div class="banner-bottom-bar">
    <div class="banner-bottom-announcement">{{ section.settings.bottom_banner_text }}</div>
   </div>
</div>

